<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_440sdp"
    android:background="#6F410A"
    tools:context=".fragments.PagerFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_all_button"
        >


        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/question_shape"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="انا ابن الماء فان تركوني في الماء اموت  "
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_answers1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/ww"
                android:text="السحاب"
                android:fontFamily="@font/games"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_answers2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ww"
                android:text="السماء"
                android:fontFamily="@font/games"

                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_answers3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/ww"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="الثلج"
                android:fontFamily="@font/games"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_answers4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/ww"
                android:fontFamily="@font/games"

                android:layout_marginTop="@dimen/_10sdp"
                android:text="المياه"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"

                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>